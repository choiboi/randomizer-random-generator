<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_main_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/colorstate_transparent_lightblue"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cl_list_name_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_medium"
        android:layout_marginTop="@dimen/default_small"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@drawable/colorstate_black_white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cl_list_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_medium"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@drawable/colorstate_black_white" />

    <TextView
        android:id="@+id/cl_date_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_medium"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/border_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/default_medium">

        <Button
            android:id="@+id/cl_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="@dimen/default_medium"
            android:paddingRight="@dimen/default_xxlarge"
            android:paddingTop="@dimen/default_medium"
            android:text="@string/delete_caps_text"
            android:textColor="@drawable/colorstate_lightred_red" />

        <Button
            android:id="@+id/cl_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="@dimen/default_medium"
            android:paddingRight="@dimen/default_xxlarge"
            android:paddingTop="@dimen/default_medium"
            android:text="@string/save_to_file_caps_text"
            android:textColor="@drawable/colorstate_blue_darkblue" />

        <Button
            android:id="@+id/cl_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="@dimen/default_medium"
            android:paddingRight="@dimen/default_xxlarge"
            android:paddingTop="@dimen/default_medium"
            android:text="@string/edit_caps_text"
            android:textColor="@drawable/colorstate_blue_darkblue" />
    </LinearLayout>

</LinearLayout>