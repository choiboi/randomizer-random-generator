<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
		    <solid android:color="@color/dark_blue" />
		    <corners android:radius="@dimen/default_small" />
		    <padding
		        android:bottom="@dimen/default_medium"
		        android:left="@dimen/default_medium"
		        android:right="@dimen/default_medium"
		        android:top="@dimen/default_medium" />
		</shape>
    </item>
    
    <item>
        <shape>
		    <solid android:color="@android:color/white" />
		    <corners android:radius="@dimen/default_small" />
		    <stroke 
		        android:width="1dp"
		        android:color="@color/border_color"/>
		    <padding
		        android:bottom="@dimen/default_medium"
		        android:left="@dimen/default_medium"
		        android:right="@dimen/default_medium"
		        android:top="@dimen/default_medium" />
		</shape>
    </item>
</selector>